// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Theme {
  id  Int  @id @default(autoincrement())
  name String
  description String
  slug String
  problems Problem[]
}

model Problem {
  id  Int  @id @default(autoincrement())
  name String
  description String
  slug String
  theme Theme @relation(fields: [themeId], references: [id])
  themeId Int
}
